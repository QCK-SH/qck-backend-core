# Development Dockerfile with hot reload  
FROM rust:1.82

WORKDIR /app

# Install cargo-watch for hot reloading
RUN cargo install cargo-watch

# Copy dev environment as .env (app always reads from .env)
COPY .env.dev .env

# Copy Cargo files and migrations for SQLx compile-time embedding
COPY Cargo.toml ./
COPY migrations ./migrations 

# Pre-build dependencies
RUN mkdir src && \
    echo "fn main() {}" > src/main.rs && \
    echo "// lib" > src/lib.rs && \
    cargo build && \
    rm -rf src

# Copy source
COPY . .

EXPOSE 8080

# Use cargo-watch for hot reloading with safe compilation
# -x run: Execute 'cargo run' on changes
# --why: Show which files triggered the rebuild
# Default behavior: If compilation fails, the old binary keeps running
# Note: Environment variables are passed from docker-compose.yml
CMD ["cargo-watch", "--why", "-x", "run"]