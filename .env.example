# Application
ENVIRONMENT=development
PORT=8080
HOST=0.0.0.0
RUST_LOG=debug,sqlx=warn

# Database
DATABASE_URL=postgresql://qck_user:qck_password@localhost:5432/qck_db
DATABASE_MAX_CONNECTIONS=100
DATABASE_MIN_CONNECTIONS=5

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# ClickHouse
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=qck_analytics
CLICKHOUSE_USER=qck_user
CLICKHOUSE_PASSWORD=qck_password

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=900 # 15 minutes
JWT_REFRESH_EXPIRATION=604800 # 7 days

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST=100

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@qck.sh

# URL Shortener
BASE_URL=http://localhost:8080
SHORT_CODE_LENGTH=6

# Security
BCRYPT_COST=12
API_KEY_PREFIX=qck_

# Analytics
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=60

# File Storage (for future use)
STORAGE_TYPE=local
STORAGE_PATH=./storage

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090