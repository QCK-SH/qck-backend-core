# Production ARM64 Environment Configuration
# For docker-compose.prod.arm.yml testing

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://qck_user:dev-db-password@postgres-prod-arm:5432/qck_production
DATABASE_MAX_CONNECTIONS=300
DATABASE_MIN_CONNECTIONS=20
DATABASE_CONNECT_TIMEOUT=10
DATABASE_IDLE_TIMEOUT=300
DATABASE_MAX_LIFETIME=1800

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://redis-prod-arm:6379
REDIS_POOL_SIZE=150
REDIS_CONNECTION_TIMEOUT=5
REDIS_RESPONSE_TIMEOUT=5

# ============================================================================
# CLICKHOUSE CONFIGURATION
# ============================================================================
CLICKHOUSE_URL=http://clickhouse-prod-arm:8123
CLICKHOUSE_DATABASE=qck_analytics
CLICKHOUSE_USER=qck_user
CLICKHOUSE_PASSWORD=dev-clickhouse-pass

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
JWT_SECRET=prod-jwt-secret-ultra-complex-256bit-long-random-string-xK9mP2nQ8vL3jF6wR
JWT_EXPIRATION=900
REFRESH_TOKEN_EXPIRATION=2592000
BCRYPT_COST=14

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
ENVIRONMENT=production
RUST_LOG=warn,qck_backend=info
RUST_BACKTRACE=0
BIND_ADDRESS=0.0.0.0:8080

# ============================================================================
# PRODUCTION FEATURES
# ============================================================================
RUN_MIGRATIONS=true  # WARNING: Set to false in real production! Only true for ARM64 testing
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_SECOND=100
RATE_LIMIT_BURST=200