# Development Environment Configuration
# This file is used for local development with hot-reload

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://qck_user:qck_password@postgres-dev:5432/qck_db
DATABASE_MAX_CONNECTIONS=100
DATABASE_MIN_CONNECTIONS=5
DATABASE_CONNECT_TIMEOUT=30
DATABASE_IDLE_TIMEOUT=600
DATABASE_MAX_LIFETIME=1800

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://redis-dev:6379
REDIS_POOL_SIZE=50
REDIS_CONNECTION_TIMEOUT=10
REDIS_RESPONSE_TIMEOUT=10

# ============================================================================
# CLICKHOUSE CONFIGURATION
# ============================================================================
CLICKHOUSE_URL=http://clickhouse-dev:8123
CLICKHOUSE_DATABASE=qck_analytics
CLICKHOUSE_USER=qck_user
CLICKHOUSE_PASSWORD=qck_password

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=604800
BCRYPT_COST=10

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
ENVIRONMENT=development
RUST_LOG=debug,qck_backend=trace,sqlx=debug
RUST_BACKTRACE=1
BIND_ADDRESS=0.0.0.0:8080

# ============================================================================
# DEVELOPMENT FEATURES
# ============================================================================
RUN_MIGRATIONS=true
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_SWAGGER_UI=true

# ============================================================================
# EXTERNAL SERVICES (Development)
# ============================================================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=dev@qck.sh
SMTP_PASSWORD=dev-password